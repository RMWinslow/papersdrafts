=
\backslash
frac{(z+r_{z}-1)!}{(r_{z}-1)!z!}(1-p_{z})^{r_{z}}p_{z}^{z}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
Then if a uniformly random person 
\begin_inset Formula $x$
\end_inset

 is infected, the secondary attack rate will follow a gamma-Poisson mixture
 distribution – call it 
\begin_inset Formula $Z\sim NB(r_{z},p_{z})$
\end_inset

 – with shape 
\begin_inset Formula $r_{z}=k$
\end_inset

 and 
\emph on
failure
\emph default
 rate 
\begin_inset Formula $p_{z}=\frac{1}{1+\theta_{v}}$
\end_inset

 
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\[
f(x)\int_{A}w(a)p(x;a)\ da
\]

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
f_{Z}(z) & =\int_{0}^{\infty}f_{v}(v)\cdot f_{Poisson(v)}(z)\ dv\\
 & =\int_{0}^{\infty}\left[\frac{v^{k-1}e^{-v/\theta_{v}}}{\Gamma(k)\theta_{v}^{k}}\right]\cdot\left[\frac{e^{-v}v^{z}}{z!}\right]\ dv\\
 & =\frac{1}{\Gamma(k)z!}\frac{1}{\theta_{v}^{k}}\int_{0}^{\infty}v^{k-1}e^{-v/\theta_{v}}e^{-v}v^{z}\ dv\\
 & =\frac{1}{\Gamma(k)z!}\frac{1}{\theta_{v}^{k}}\int_{0}^{\infty}v^{z+k-1}e^{-v\frac{1+\theta_{v}}{\theta_{v}}}\ dv\\
 & =TODO\\
 & =\frac{1}{\Gamma(k)z!}\frac{1}{\theta_{v}^{k}}\cdot\left(\frac{\theta_{v}}{1+\theta_{v}}\right)^{z+k}\cdot\left[\Gamma\left(z+k,\frac{1+\theta_{v}}{\theta_{v}}v\right)\right]_{v=0}^{\infty}\\
 & =\frac{1}{\Gamma(k)z!}\cdot\frac{1}{\theta_{v}^{k}}\left(\frac{\theta_{v}}{1+\theta_{v}}\right)^{z+k}\cdot\Gamma(z+k)\\
 & =\frac{\Gamma(z+k)}{\Gamma(k)z!}\left(\frac{\theta}{1+\theta_{v}}\right)^{z}\left(\frac{1}{1+\theta_{v}}\right)^{k}\\
 & =\frac{\Gamma(z+r_{z})}{\Gamma(r_{z})z!}p_{z}^{r_{z}}(1-p_{z})^{z}
\end{align*}

\end_inset


\end_layout

